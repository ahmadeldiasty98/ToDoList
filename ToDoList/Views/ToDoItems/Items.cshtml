@model List<TasksToDo>
@{
    ViewData["Title"] = "List To-Do-Item";
}
<div class="row mb-3">
    <h2 class="containerr">Welcome, @ViewBag.Name</h2>
    @if (TempData["Created"] != null)
    {
        @section Scripts {
        <script>
            if ('@TempData["Created"]' != '') {
                toastr.success('@TempData["Created"]');
            }
        </script>
        }
    }
    <p>Here Is Your To-Do-List :</p>
    <a href="/ToDoItems/CreateItem" type="button" class="btn btn-danger col-2">Create New Item To-Do</a>
</div>

<div class="row">
    <table class="table table-hover align-items-center text-center">
        <thead>
            <tr>
                <th scope="col">Title</th>
                <th scope="col">Description</th>
                <th scope="col">DeadLine</th>
                <th scope="col">Task File</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr class="table-light">
                    <td>@item.Title</td>
                    <td>@item.Description</td>
                    <td>@item.DeadLine</td>
                    <td>
                        <a href="@Url.Action("Download", "ToDoItems", new { pdfUrl = item.PdfUrl })"
                           class="btn btn-success">Download</a>
                    </td>
                    <td class="col-3">
                        <a href="/ToDoItems/EditItem?tasksToDoId=@item.Id" class="btn btn-warning">Edit</a>
                        <a href="#" class="btn btn-danger"
                           data-bs-toggle="modal"
                           data-bs-target="#confirmDeleteModal"
                           data-url="/ToDoItems/DeleteItem?tasksToDoId=@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<!-- Confirmation Modal -->
<div class="modal fade" id="confirmDeleteModal" tabindex="-1" aria-labelledby="confirmDeleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="confirmDeleteModalLabel">Confirm Deletion</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete this item?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger" id="confirmDeleteButton">Delete</button>
            </div>
        </div>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        const deleteButtons = document.querySelectorAll('.btn-danger[data-bs-toggle="modal"]');

        deleteButtons.forEach(button => {
            button.addEventListener('click', function () {
                const deleteUrl = this.getAttribute('data-url');

                const confirmDeleteButton = document.getElementById('confirmDeleteButton');
                confirmDeleteButton.onclick = function () {
                    window.location.href = deleteUrl; // Redirect to the delete URL
                };
            });
        });
    });
</script>
