@{
    ViewData["Title"] = "Create New To-Do-Item";
}
<div class="row mb-3">
    <h1>Create New To-Do Item.</h1>
</div>

<div class="row">
    <form action="/ToDoItems/AddName" method="post">
        <div class="mb-3">
            <label for="PName" class="form-label">Your Name:</label>
            <input type="text" class="form-control" id="PName" name="PersonName">
        </div>
        <button type="submit" class="btn btn-primary">Create</button>
    </form>
</div>

